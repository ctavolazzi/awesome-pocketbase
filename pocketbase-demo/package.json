{
  "name": "pocketbase-demo",
  "version": "1.0.0",
  "type": "module",
  "description": "PocketBase demo with JavaScript SDK",
  "main": "script.mjs",
  "scripts": {
    "start": "node startup.mjs",
    "start:legacy": "node script.mjs",
    "setup": "node setup.mjs",
    "crud": "node crud-demo.mjs",
    "realtime": "node realtime-demo.mjs",
    "auth": "node auth-demo.mjs",
    "ollama": "node ollama-feed.mjs",
    "serve": "./pocketbase serve --http=127.0.0.1:8090",
    "server": "node server/index.mjs",
    "test": "node test-all.mjs",
    "test:unit": "node --test \"tests/unit/**/*.test.mjs\"",
    "test:store": "node --test tests/unit/store/store.test.mjs tests/unit/store/ai.store.test.mjs",
    "test:server": "node --test \"server/tests/**/*.test.mjs\"",
    "test:integration": "node --test server/tests/integration.test.mjs",
    "test:errors": "node --test server/tests/error-scenarios.test.mjs",
    "test:load": "k6 run server/tests/load/basic-load.js",
    "test:stress": "k6 run server/tests/load/stress-test.js",
    "verify": "node verify.mjs",
    "verify:openai": "node verify-openai.mjs",
    "test:ai": "node --test tests/ci/ai-smoke.test.mjs",
    "test:ai:dry": "AI_TEST_MODE=dry npm run test:ai",
    "test:ai:live": "AI_TEST_MODE=live npm run test:ai",
    "verify:json": "OUTPUT_FORMAT=json node verify.mjs",
    "docker:build": "docker-compose build",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "docs:api": "echo 'Start server and visit http://localhost:3030/api-docs'"
  },
  "dependencies": {
    "@sentry/node": "^10.20.0",
    "@sentry/profiling-node": "^10.20.0",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^4.19.2",
    "express-rate-limit": "^8.1.0",
    "helmet": "^8.1.0",
    "isomorphic-dompurify": "^2.29.0",
    "js-yaml": "^4.1.0",
    "openai": "^4.58.1",
    "pocketbase": "^0.26.2",
    "prom-client": "^15.1.3",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1"
  },
  "devDependencies": {
    "jsdom": "^24.0.0"
  }
}
